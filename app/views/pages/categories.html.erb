<div class="w-full h-full -mx-3">
    <h1 class="text-4xl mb-3 mx-3">Classifier Categories</h1>

    <% @categories.each do |category| %>
        <div class="
        flex flex-col
        px-8 pt-6 pb-6
        bg-white rounded-lg shadow-md
        text-black
        w-full
        mb-5
        ">
            <h2 class="text-2xl font-semibold">
                <%= category["title"] %>
            </h2>
            
            <h2 class="text-lg font-semibold">
                ID
            </h2>
            <p class="mb-2">
                <%= category["id"] %>
            </p>
            
            <h2 class="text-lg font-semibold">
                Labels
            </h2>
            <ul class="flex flex-wrap">
                <% category["labels"].each do |label| %>
                    <li class="rounded-xl bg-gray-100 m-3 px-3 py-2">
                        <%= label %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
</div>